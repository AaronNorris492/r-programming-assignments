library(plyr)

student6 <- read.table(file.choose(), header = TRUE, sep = ",", stringsAsFactors = FALSE)
str(student6)

gender_mean <- ddply(
  student6,
  "Sex",
  summarise,
  GradeAverage = mean(Grade, na.rm = TRUE)
)

print(gender_mean)

write.table(
  gender_mean,
  file = "gender_mean.txt",
  sep = "\t",
  row.names = FALSE
)

i_students <- subset(
  student6,
  grepl("i", Name, ignore.case = TRUE)
)

print(i_students)

write.csv(
  i_students$Name,
  file = "i_students.csv",
  row.names = FALSE
)
